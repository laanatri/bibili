<div class="w-screen h-screen bg-yellow-50 flex items-center">


<div class="container max-w-xs m-auto px-10 py-5 m-auto flex flex-col rounded-lg bg-white shadow-md">

  <h1 class="text-center text-4xl mb-10">Inscrivez-vous</h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs text-center">
    <%= f.input :email,
                required: true,
                label: "Email",
                placeholder: 'nom@gmail.com',
                input_html: { autocomplete: "email" }%>


    <%= f.input :password,
                required: true,
                class: "pass-up",
                label: "Mot de passe",
                placeholder: '•••••••',
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <i class="fas fa-eye eye-sign-up-first cursor-pointer" id="eye"></i>


    <%= f.input :password_confirmation,
                required: true,
                label: "Confirmation mot de passe",
                placeholder: '•••••••',
                input_html: { autocomplete: "new-password" } %>
    <i class="fas fa-eye eye-sign-up-second cursor-pointer" id="eye"></i>



  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "S'inscrire", class: "btn py-2.5 px-5 mb-10 shadow-md rounded-md hover:shadow-xl bg-green-200 text-pink-900 cursor-pointer" %>
  </div>
<% end %>

  <div class="redirect-to-signin flex justify-center text-sm">
    <p>Déjà un profil ?&nbsp;&nbsp;</p>
    <%= render "devise/shared/links" %>
  </div> 

</div>
</div>
